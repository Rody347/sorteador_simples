from turtle import Turtle 


print('Seja muito bem vindo(a) ao jogo Turtle!!')
como_jogar = ''
print('Escolha uma direção abaixo!')
frente_tras = ''
qtd_pixels = ''
rotacionar = ''
graus = ''
continuar = ''
while continuar != 'n' or continuar != 'N':
    frente_tras = input('f: frente // t:trás')
    if frente_tras == 'f':
        qtd_pixels = int(input('Digite quantos pixels você quer movimentar: '))
        rotacionar = input('e: rotacionar p/ esquerda // d: rotacionar p/ direita // n: não rotacionar')
        if rotacionar == 'e':
            graus = graus = int(input('Digite quantos graus você quer rotacionar: ')
            t.forward(qtd_pixels)
            t.left(graus)
        elif rotacionar == 'd':
            graus = graus = int(input('Digite quantos graus você quer rotacionar: ')
            t.forward(qtd_pixels)
            t.right(graus)
        else:
            continue 
    
    if frente_tras == 't':
        qtd_pixels = int(input('Digite quantos pixels você quer movimentar: '))
        rotacionar = input('e: rotacionar p/ esquerda // d: rotacionar p/ direita // n: não rotacionar')
        if rotacionar == 'e':
            graus = graus = int(input('Digite quantos graus você quer rotacionar: ')
            t.backward(qtd_pixels)
            t.left(graus)
        elif rotacionar == 'd':
            graus = graus = int(input('Digite quantos graus você quer rotacionar: ')
            t.backward(qtd_pixels)
            t.right(graus)
        else:
            continue
    
    continuar = input('Quer continuar? s/n')
    
print('Turtle!!!!')
